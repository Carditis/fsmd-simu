<fsmddescription>

  <statelist>
    <state>START</state>
    <state>VALIDATE</state>
    <state>TEST</state>
    <state>DECRA</state>
    <state>DECRB</state>
    <state>COMPLETE</state>
  </statelist>

  <initialstate>START</initialstate>

  <inputlist>
    <input>in_A</input>
    <input>in_B</input>
  </inputlist>

  <variablelist>
    <variable>var_A</variable>
    <variable>var_B</variable>
  </variablelist>

  <operationlist>
    <operation>
      <name>init_A</name>
      <expression>var_A = in_A</expression>
    </operation>
    <operation>
      <name>init_B</name>
      <expression>var_B = in_B</expression>
    </operation>
    <operation>
      <name>DECR_A</name>
      <expression>var_A = var_A - 1</expression>
    </operation>
    <operation>
      <name>DECR_B</name>
      <expression>var_B = var_B - 1</expression>
    </operation>
    </operationlist>

  <conditionlist>
    <condition>
      <name>B_gt_A</name>
      <expression>(var_B &gt; var_A) and ((var_B % var_A) != 0)</expression>
    </condition>
    <condition>
      <name>A_gt_B</name>
      <expression>(var_A &gt; var_B) and ((var_A % var_B) != 0)</expression>
    </condition>
    <condition>
      <name>MOD_ZERO</name>
      <expression>((var_A % var_B) == 0) or ((var_B % var_A) == 0)</expression>
    </condition>
    <condition>
      <name>NValid</name>
      <expression>(var_A &lt;= 0) or (var_B &lt;= 0)</expression>
    </condition>
    <condition>
      <name>Valid</name>
      <expression>not((var_A &lt;= 0) or (var_B &lt;= 0))</expression>
    </condition>
  </conditionlist>

  <fsmd>
    <START>
      <transition>
        <condition>True</condition>
        <instruction>init_A init_B</instruction>
        <nextstate>VALIDATE</nextstate>
      </transition>
    </START>

    <VALIDATE>
      <transition>
        <condition>NValid</condition>
        <instruction>NOP</instruction>
        <nextstate>COMPLETE</nextstate>
      </transition>
      <transition>
        <condition>Valid</condition>
        <instruction>NOP</instruction>
        <nextstate>TEST</nextstate>
      </transition>
    </VALIDATE>

    <TEST>
      <transition>
        <condition>MOD_ZERO</condition>
        <instruction>NOP</instruction>
        <nextstate>COMPLETE</nextstate>
      </transition>
      <transition>
        <condition>A_gt_B</condition>
        <instruction>NOP</instruction>
        <nextstate>DECRB</nextstate>
      </transition>
      <transition>
        <condition>B_gt_A</condition>
        <instruction>NOP</instruction>
        <nextstate>DECRA</nextstate>
      </transition>
    </TEST>

    <DECRB>
      <transition>
        <condition>True</condition>
        <instruction>DECR_B</instruction>
        <nextstate>TEST</nextstate>
      </transition>
    </DECRB>

    <DECRA>
      <transition>
        <condition>True</condition>
        <instruction>DECR_A</instruction>
        <nextstate>TEST</nextstate>
      </transition>
    </DECRA>

    <COMPLETE>
      <transition>
        <condition>True</condition>
        <instruction>NOP</instruction>
        <nextstate>COMPLETE</nextstate>
      </transition>
    </COMPLETE>
  </fsmd>

</fsmddescription>
