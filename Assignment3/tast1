import machine
import time
pin = machine.Pin(21, machine.Pin.OUT)
input1 = machine.Pin(14, machine.Pin.IN, machine.Pin.PULL_UP)

while(True):
    if not(input1.value() == 1):
        pin.value(1)
        time.sleep_ms(500)
        pin.value(0)
        time.sleep_ms(500)
    else:
        pin.value(0)